extends layouts/login-layout.pug

block content
    .wrapper
        .mainSection
            .loginContainer
                h1 Login 
                form(method="post")
                    p.errorMessage #{errorMessage}
                    input(type="text", name="logName", placeholder="Username or email", value=logUsername required="")
                    input(type="password", name="logPassword", placeholder="Password", required="")
                    input(type="submit", value="Login")
                a.switchBtn(href="/register" title="Register")
                    i.fas.fa-edit